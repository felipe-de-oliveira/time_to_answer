<h1 class="h3 mb-2 text-gray-800">Editando</h1>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <%= form_with(model: [:admins_backoffice, @admin]) do |form| %>
              <div class="form-group">
                <%= form.label :email %>
                <%= form.text_field :email, class:"form-control", placeholder:"E-mail do Admininstrador" %>
              </div>
              <div class="form-group">
                <%= form.label :password %>
                <%= form.text_field :password, class:"form-control", placeholder:"Digite..." %>
              </div>
              <div class="form-group">
                <%= form.label :password_confirmation %>
                <%= form.text_field :password_confirmation, class:"form-control", placeholder:"Digite..." %>
              </div>
              <button type="submit" class="btn btn-primary"> Salvar Alterações </button>
            <% end %> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>