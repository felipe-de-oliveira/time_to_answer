<h1>Listando Administradores</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>

    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.id %></td>
        <td><%= admin.email %></td>
        
        <td>
          <a href="#" class="btn btn-info btn-circle"><i class="fa fa-edit"></i></a>
          <a href="#" class="btn btn-danger btn-circle"><i class="fa fa-times-circle"></i></a>
        </td>  
      </tr>
    <% end %>
  </tbody>
</table>