<h1 class="h3 mb-2 text-gray-800">Novo</h1>

<div class="row">
  <% if @question.errors.any? %>
    <div class="alert alert-danger d-flex align-items-center" role="alert">
      <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
      <div>
        <ul>
          <% @question.errors.full_messages.each do |message| %>
            <li> <%= message %> </li> 
          <% end %>
        </ul>
      </div>
    </div>
  <% end %> 
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <%= form_with(model: [:admins_backoffice, @question]) do |form| %>
              <div class="form-group">
                <%= form.label :description %>
                <%= form.text_area :description, class:"form-control", placeholder:"Descrição da Pergunta..", rows: 5 %>
              </div>

              <div class="form-group">
                <%= form.label :subject %>
                <%= form.collection_select(:subject_id, Subject.all, :id, :description, {}, {class: "font-control"}) %>
              </div>
              <button type="submit" class="btn btn-primary"> Salvar Alterações </button>
            <% end %> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>