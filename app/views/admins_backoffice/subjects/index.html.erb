<h1 class="h3 mb-2 text-gray-800">Listando Assuntos/Aréas</h1>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>id</th>
        <th>Descrição</th>
        <th>
          <%= link_to new_admins_backoffice_subject_path, class:"btn btn-success btn-circle" do%>
            <i class="fa fa-plus"></i>
          <% end%>
        </th>
      </tr>
    </thead>

    <tbody>
      <% @subjects.each do |subject| %>
        <tr>
          <td><%= subject.id %></td>
          <td><%= subject.description %></td>

          <td>
            <%= link_to edit_admins_backoffice_subject_path(subject), class:"btn btn-info btn-circle" do%>
              <i class="fa fa-edit"></i>
            <% end%>
            <%= link_to admins_backoffice_subject_path(subject), method: :delete, class:"btn btn-danger btn-circle", data:{ confirm: "Deseja excluir mesmo esse assunto/aréa?" } do%>
              <i class="fa fa-times-circle"></i>
            <% end%>
          </td>  
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @subjects %>
</div>